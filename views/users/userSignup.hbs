<div class="row justify-content-center">
    <div class="p-3 col-md-9 col-lg-4">
        <div class="d-flex justify-content-center">
            <h2 class="pb-3">User Sign up</h2>
        </div>
        <form action="/signup" method="post">

            <!-- Name field -->
            <div class="form-outline mb-3">
                <input type="text" id="form2Example2" name="userName" class="form-control" placeholder="Enter your name" required />
                {{!-- <label class="form-label d-flex justify-content-center pt-2" for="form2Example2">Name</label> --}}
            </div>

            <!-- Email input -->
            <div class="form-outline mb-3">
                <input type="email" id="form2Example1" class="form-control" name="Email" placeholder="Enter your email" required />
                {{!-- <label class="form-label d-flex justify-content-center pt-2" for="form2Example1">Email address</label> --}}
            </div>

            <!-- Password input -->
            <div class="form-outline mb-3">
                <input type="password" id="form2Example2" class="form-control" name="Password" placeholder="Enter password" required />
                {{!-- <label class="form-label d-flex justify-content-center pt-2" for="form2Example2">Password</label> --}}
            </div>

            <div class="text-center">
                <p>Already have an account? <a href="/">Sign in</a></p>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>
        </form>
    </div>
</div>