<div class="row justify-content-center">
    <div class="p-3 col-md-9 col-lg-4">
        <div class="d-flex justify-content-center">
            <h2 class="pb-3">Admin login</h2>
        </div>
        <form action="/admin/adminlogin" method="post">
            <!-- Email input -->
            <div class="form-outline mb-3">
                <input type="email" id="form2Example1" name="Email" class="form-control" placeholder="Enter the email address" required />
                {{!-- <label class="form-label d-flex justify-content-center pt-2" for="form2Example1">Email address</label> --}}
            </div>

            <!-- Password input -->
            <div class="form-outline mb-3">
                <input type="password" id="form2Example2" name="Password" class="form-control" placeholder="Enter password" required />
                {{!-- <label class="form-label d-flex justify-content-center pt-2" for="form2Example2">Password</label> --}}
            </div>

            <div class="row justify-content-center">
                <p>{{message}}</p>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Log in</button>
        </form>
    </div>
</div>