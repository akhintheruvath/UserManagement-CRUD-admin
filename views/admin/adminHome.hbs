<div class="container-fluid">
    <table class="table table-striped">
        <thead>
            <tr>
                {{!-- <th>No</th> --}}
                <th>Name of user</th>
                <th>Email address</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                {{!-- <td>{{@index}}</td> --}}
                <td>{{this.Name}}</td>
                <td>{{this.Email}}</td>
                <td>
