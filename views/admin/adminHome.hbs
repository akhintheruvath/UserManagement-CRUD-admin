                        <button class="btn btn-primary bg-primary" type="submit" name="update">Edit</button>
                    </form>
                </td>
                <td>
                    <form action="/admin/userDelete/{{this._id}}" method="post">
                        <button class="btn btn-primary bg-danger"
                            onclick=" return confirm('Are you sure, do you want to delete?')" type="submit"
                            name="Delete">Delete</button>
                    </form>
                </td>
